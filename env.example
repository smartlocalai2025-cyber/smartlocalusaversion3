# Example environment configuration (copy to .env.local and fill values)

# Firebase (client-side)
VITE_FIREBASE_API_KEY=""
VITE_FIREBASE_AUTH_DOMAIN=""
VITE_FIREBASE_PROJECT_ID=""
VITE_FIREBASE_STORAGE_BUCKET=""
VITE_FIREBASE_MESSAGING_SENDER_ID=""
VITE_FIREBASE_APP_ID=""
VITE_FIREBASE_MEASUREMENT_ID=""

# Optional UI config
VITE_ADMIN_EMAIL=""
# Optional: comma-separated list of admin emails (overrides VITE_ADMIN_EMAIL when set)
VITE_ADMIN_EMAILS="smartlocalai2025@gmail.com"
VITE_LOCAL_AI_URL=""
VITE_DEFAULT_AI_PROVIDER="openai"
VITE_DEFAULT_AI_MODEL="gpt-4o-mini"
VITE_REQUEST_TIMEOUT=30000
VITE_MAX_RETRIES=2

# Auth/Runtime mode
# Set AUTH_MODE=local to disable Firebase requirements on the server and use X-Admin-Token/JWT instead
AUTH_MODE="firebase" # options: firebase | local
# Local auth (server-side)
MORROW_ADMIN_TOKEN="localdev"   # used when AUTH_MODE=local with X-Admin-Token header
JWT_SECRET="change-me"          # used when AUTH_MODE=local for signing/verifying local JWTs
ADMIN_EMAILS="admin@example.com" # comma-separated list of admin emails
LOCAL_ADMIN_EMAIL="admin@example.com" # default email injected when using X-Admin-Token path

# Frontend (optional): pick local auth provider to avoid Firebase in UI (advanced)
# If set to 'local', your frontend can send X-Admin-Token instead of Firebase ID tokens.
VITE_AUTH_PROVIDER="firebase" # options: firebase | local

# Maps (client-side)
VITE_GOOGLE_MAPS_API_KEY=""

# AI provider keys (server-side only; do not expose to browser)
# Set these in ai-server/.env or deployment env, not in Vite-exposed vars.
OPENAI_API_KEY=""
# Gemini is optional (helper for specific tasks)
GEMINI_API_KEY=""
