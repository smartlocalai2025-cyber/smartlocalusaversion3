{
  "name": "smartlocal-ai",
  "private": true,
  "workspaces": [
    "ai-server",
    "functions",
    "shared"
  ],
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "npm --prefix ai-server start",
    "start:server": "npm --prefix ai-server start",
    "dev:all": "concurrently -k \"npm:dev\" \"npm:start:server\"",
    "emulators": "firebase emulators:start --only auth,firestore --import ./.firebase-data --export-on-exit ./.firebase-data",
    "dev:all:emu": "concurrently -k \"npm:emulators\" \"npm:dev\" \"npm:start:server\"",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.6",
    "express": "^4.21.2",
    "firebase": "^10.14.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.2.2",
    "jsdom": "^27.0.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vitest": "^3.2.4",
    "firebase-tools": "^13.29.2"
  }
}
